
  <div class="container-fluid">
    
    <img src="assets/images/burger4.gif">
   

  <div class="row">
    <div class="md-col-6 sm-col-12">
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="change-devour" data-id="{{id}}">Devour it!</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="md-col-6 sm-col-12">
      <ol>
        {{#each burgers}}
        {{#if devoured}}
        <li class="styleList">
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>


  <h2>Eat-Da-Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <input type="text" id="burgerInput" name="burgerName">
    </div>

    <button class="btn-primary" type="submit">Submit</button>
    <p>Enter a burger you want to eat. Click the Submit Button</p>
  </form>
</div>
